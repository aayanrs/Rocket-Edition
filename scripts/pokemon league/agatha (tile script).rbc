#dynamic 0x800000
#include stdmoves.rbh
#define _AGATHA 0x1

#org @main
lock
textcolor 0x1
getplayerpos 0x8000 0x8001
compare 0x8000 0x4
if _LESS call @faceLeft
compare 0x8000 0x8
if _GREATER call @faceRight
msgbox @talk 0x6
call @playerMove
applymovement _AGATHA @stepD
waitmovement 0x0
msgbox @talk2 0x6
pause 0x15
spriteface _AGATHA FACE_LEFT
pause 0x10
applymovement _AGATHA @1left
waitmovement 0x0
pause 0x25
msgbox @talk3 0x6
pause 0x15
spriteface _AGATHA FACE_UP
pause 0x20
msgbox @talk4 0x6
pause 0x15
spriteface _AGATHA FACE_RIGHT
pause 0x15
applymovement _AGATHA @1right
waitmovement 0x0
spriteface _AGATHA FACE_DOWN
pause 0x10
msgbox @talk5 0x6
pause 0x20
spriteface _AGATHA FACE_UP
pause 0x15
applymovement _AGATHA @stepU
waitmovement 0x0
msgbox @talk6 0x6
pause 0x30
spriteface _AGATHA FACE_DOWN
pause 0x10
msgbox @talk7 0x6
setvar 0x404F 0x2
release
end


#org @playerMove
compare 0x8000 0x7
if 0x1 call @oneLeft
compare 0x8000 0x8
if 0x1 call @twoLeft
compare 0x8000 0x9
if 0x1 call @threeLeft
compare 0x8000 0xB
if 0x1 call @fiveLeft
compare 0x8000 0x5
if 0x1 call @oneRight
compare 0x8000 0x4
if 0x1 call @twoRight
compare 0x8000 0x3
if 0x1 call @threeRight
compare 0x8000 0x1
if 0x1 call @fiveRight
spriteface 0xFF FACE_UP
return

#org @faceLeft
spriteface _AGATHA FACE_LEFT
return

#org @faceRight
spriteface _AGATHA FACE_RIGHT
return

#org @oneLeft
applymovement 0xFF @1left
waitmovement 0x0
return

#org @twoLeft
