cry 0x13 0x0
msgbox @want 0x5
compare 0x800D 0x1
if 0x1 goto @yes
hidepokepic
msgbox @notext 0x6
givepokemon 0x13 0x5 0x0 0x0 0x0 0x0
fanfare 0x13E
msgbox @receive 0x4
waitfanfare
closeonkeypress
msgbox @givenickname 0x5
compare 0x800D 0x1
if 0x1 goto @name
goto @scriptend
end

