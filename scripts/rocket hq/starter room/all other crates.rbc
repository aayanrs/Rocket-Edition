#dynamic 0x800000
#include stdmoves.rbh

#org @main
lock
checkflag 0x202
if 0x0 goto @getrattata
checkflag 0x204
if 0x0 goto @noBeingGreedy
msgbox @nothing 0x6
release
end

#org @noBeingGreedy
spriteface 0x0 FACE_UP
textcolor 0x0
msgbox @greedyStopper 0x6
spriteface 0x0 FACE_DOWN
release
end

