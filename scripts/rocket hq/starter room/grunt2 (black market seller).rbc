#dynamic 0x800000
#include stdmoves.rbh
#define SELLER 0x3
#define ASSISTANT 0x8

#org @start
lock
checkflag 0x208
if 0x1 goto @blackMarket
checkflag 0x204
if 0x1 goto @preTV
msgbox @dumbTalk 0x6
release
end

#org @dumbTalk
= Aw, shucks!\nI'm gonna get my very own Rattata!\pIf only dad could see me now[.]

#org @preTV
msgbox @angryTalk 0x6
release
end

#org @angryTalk
= I hear ya.\pThere's got to be something we can\ndo to set things straight again[.]

// --------------------------------------------------------------------------
// --------------------------------------------------------------------------

#org @blackMarket
faceplayer
checkflag 0x2B8
if 0x1 goto @noMoreRewards
checkflag 0x22F
if 0x0 goto @intro
msgbox @regularTalk 0x6
goto @infamyCheck
end

#org @intro
msgbox @introTalk 0x6
pause 0x8
msgbox @introTalk2 0x6
setflag 0x22F
goto @infamyCheck
end

#org @infamyCheck
applymovement SELLER @PCcheck
waitmovement 0x0
buffernumber 0x0 0x401F
compare 0x401F 0xB4 // if stolen >= 60
if 0x4 goto @GT60
compare 0x401F 0x78 // if stolen >= 40
if 0x4 goto @GT40
compare 0x401F 0x3C // if stolen >= 20
if 0x4 goto @GT20
compare 0x401F 0xA // if stolen >= 10
if 0x4 goto @GT10
compare 0x401F 0x1 // if stolen >= 1
if 0x4 goto @notBad
goto @innocent
end

#org @GT60
msgbox @gt60talk 0x6
checkflag 0x2B8
if 0x0 goto @lifeOrb
end

#org @GT40
msgbox @gt40talk 0x6
checkflag 0x27A
if 0x0 goto @shellBell
release
end

#org @GT20
msgbox @gt20talk 0x6
checkflag 0x27B
if 0x0 goto @kingsRock
release
end

#org @GT10
msgbox @gt10talk 0x6
checkflag 0x27C
if 0x0 goto @quickClaw
release
end

#org @notBad
msgbox @notBadTalk 0x6
release
end

#org @innocent
msgbox @innocentTalk 0x6
release
end

#org @lifeOrb
checkitemroom 0xE4 0x1
compare LASTRESULT 0x0
if 0x1 goto @noRoom
call @itemCollect
bufferitem 0x1 0xE4
additem 0xE4 0x1
setflag 0x2B8
call @itemGet
checkflag 0x27A
if 0x0 call @shellBellExtra
checkflag 0x27B
if 0x0 call @kingsRockExtra
checkflag 0x27C
if 0x0 call @quickClawExtra
release
end

#org @shellBell
checkitemroom 0xDB 0x1
compare LASTRESULT 0x0
if 0x1 goto @noRoom
call @itemCollect
bufferitem 0x1 0xDB
additem 0xDB 0x1
setflag 0x27A
call @itemGet
checkflag 0x27B
if 0x0 call @kingsRockExtra
checkflag 0x27C
if 0x0 call @quickClawExtra
release
end

#org @shellBellExtra
textcolor 0x0
msgbox @extraTalk3 0x6
checkitemroom 0xDB 0x1
compare LASTRESULT 0x0
if 0x1 goto @noRoom
bufferitem 0x1 0xDB
additem 0xDB 0x1
setflag 0x27A
call @itemGet
return

#org @kingsRock
checkitemroom 0xBB 0x1
compare LASTRESULT 0x0
if 0x1 goto @noRoom
call @itemCollect
bufferitem 0x1 0xBB
additem 0xBB 0x1
setflag 0x27B
call @itemGet
checkflag 0x27C
if 0x0 call @quickClawExtra
release
end

#org @kingsRockExtra
textcolor 0x0
msgbox @extraTalk1 0x6
checkitemroom 0xBB 0x1
compare LASTRESULT 0x0
if 0x1 goto @noRoom
bufferitem 0x1 0xBB
additem 0xBB 0x1
setflag 0x27B
call @itemGet
return

#org @quickClaw
call @itemCollect
checkitemroom 0xB7 0x1
compare LASTRESULT 0x0
if 0x1 goto @noRoom
bufferitem 0x1 0xB7
additem 0xB7 0x1
